using System;

class Program
{
    static void Main()
    {
        try
        {
            Console.Write " x = ");
            string inputStr = Console.ReadLine();
х
            if (inputStr.Length < 3)
                throw new ArgumentException("х = ");

            char secondDigit = inputStr[1]; 
            string firstPart = inputStr.Substring(0, 1); 
            string lastPart = inputStr.Substring(2);     

            string newNumberStr = firstPart + lastPart + secondDigit;

            long newNumber = Convert.ToInt64(newNumberStr);
            Console.WriteLine($"Исходное число: {inputStr}, Новое число: {newNumber}");
        }
        catch (Exception ex)
        {
            Console.WriteLine("Ошибка: " + ex.Message);
        }
        finally
        {
            Console.WriteLine("\nНажмите любую клавишу для выхода...");
            Console.ReadKey();
        }
    }
}
